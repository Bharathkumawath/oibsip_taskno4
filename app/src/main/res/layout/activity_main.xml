<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D2DAFF"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#AAC4FF">

        <ImageView
            android:layout_width="40dp"
            android:id="@+id/icon"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/quizicon"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/icon"
            android:text="quiz app"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="20dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#EEF1FF"
        android:layout_height="wrap_content">
    <TextView

        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        android:text="here is the question"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="20dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#EEF1FF"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="10dp"


            android:gravity="center_vertical"
            android:text="A)"
            android:textColor="@color/black"
            android:textSize="20dp"

            android:textStyle="bold"
            ></TextView>

    <TextView
        android:id="@+id/aoption"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
       android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"

        android:onClick="onclick"


        android:gravity="center_vertical"
        android:text="this is first option"
        android:textColor="@color/black"
        android:textSize="20dp"

        android:textStyle="bold"
       ></TextView>

        <ImageView
            android:layout_width="50dp"
            android:id="@+id/i1"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/wrong"></ImageView>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="20dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#EEF1FF"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal"
      >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="10dp"


            android:gravity="center_vertical"
            android:text="B)"
            android:textColor="@color/black"
            android:textSize="20dp"

            android:textStyle="bold"
            ></TextView>
    <TextView
        android:id="@+id/doption"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:onClick="onclick"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"

        android:gravity="center_vertical"
        android:text="this is first option"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
       ></TextView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/wrong"
            android:id="@+id/i4"></ImageView>
</LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="20dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#EEF1FF"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="10dp"


            android:gravity="center_vertical"
            android:text="C)"
            android:textColor="@color/black"
            android:textSize="20dp"

            android:textStyle="bold"
            ></TextView>
    <TextView
        android:id="@+id/coption"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/quesion"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:text="this is first option"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:onClick="onclick"
        android:textStyle="bold"
       ></TextView>
        <ImageView
            android:layout_width="50dp"
            android:id="@+id/i3"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/wrong"></ImageView>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="20dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#EEF1FF"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="10dp"


            android:gravity="center_vertical"
            android:text="D)"
            android:textColor="@color/black"
            android:textSize="20dp"

            android:textStyle="bold"
            ></TextView>

    <TextView
        android:id="@+id/boption"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:onClick="onclick"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/quesion"
        android:gravity="center_vertical"
        android:text="this is first option"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
       ></TextView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:id="@+id/i2"
            android:src="@drawable/wrong"></ImageView>


    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="15sp"

        android:id="@+id/explaincard"
        android:visibility="visible"
        android:layout_margin="10dp"
        android:backgroundTint="#EEF1FF"
        android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_margin="10dp"

        android:layout_height="150dp"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/litle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Explanation"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/explain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                  android:text=" "
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="end"
          android:backgroundTint="#AAC4FF"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_baseline_navigate_next_24" />

</LinearLayout>